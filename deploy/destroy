#!/usr/bin/env bash

set -eo pipefail

################################################################################
# Validate Inputs
################################################################################

function usage {
    echo "usage: $0 [namespace]"
    echo "  namespace    namespace to destroy the image (eg. staging)"
    exit 1
}

[ -z "$1" ] && { usage; }

################################################################################
# Set Inputs
################################################################################

NAMESPACE=$1

################################################################################
# Delete Definitions
################################################################################

kubectl delete -k k8s/overlays/$NAMESPACE -n $NAMESPACE
