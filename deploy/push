#!/usr/bin/env bash

set -eo pipefail

################################################################################
# Validate Inputs
################################################################################

function usage {
    echo "usage: $0 [tag]"
    echo "  tag         tag of the image version (eg. latest)"
    echo "  repository  ECR build repository (eg. broadband-plans)"
    exit 1
}

[ -z "$1" ] && { usage; }

################################################################################
# Set Inputs
################################################################################

TAG=$1
REPOSITORY=$2

################################################################################
# Constants
################################################################################

DIR="$(dirname "${BASH_SOURCE[0]}")"

################################################################################
# Setup Environment
################################################################################

source ${DIR}/env

################################################################################
# Set Variables
################################################################################

IMAGE="$ENDPOINT/$REPOSITORY:$TAG"
echo $IMAGE

################################################################################
# Login to AWS
################################################################################

$(aws ecr get-login --no-include-email)

################################################################################
# Push to Repository
################################################################################

$debug docker push "$IMAGE.build"
