#!/usr/bin/env bash

################################################################################
# Set Variables
################################################################################
NAME="$1"
TAG="$2"
GIT_SHA="$3"
NAMESPACE="$4"
ENVIRONMENT="$5"

echo "NAME is $NAME"
echo "TAG is $TAG"
echo "GIT_SHA is $GIT_SHA"
echo "NAMESPACE is $NAMESPACE"
echo "ENVIRONMENT is $ENVIRONMENT"

ls
cd deploy && ls
pwd

# Build Image

/deploy/build "${TAG}" "${GIT_SHA}"

