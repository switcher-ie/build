#!/usr/bin/env bash

################################################################################
# Set Variables
################################################################################
NAME="$1"
TAG="$3"
GIT_SHA="$4"
NAMESPACE="$5"
ENVIRONMENT="$6"
REPOSITORY="${GITHUB_REPOSITORY/switcher-ie\//}"

echo "NAME is $NAME"
echo "TAG is $TAG"
echo "GIT_SHA is $GIT_SHA"
echo "NAMESPACE is $NAMESPACE"
echo "ENVIRONMENT is $ENVIRONMENT"
echo "REPOSITORY is $REPOSITORY"

# Build Image

/deploy/build "${TAG}" "${GIT_SHA}" "${REPOSITORY}"

