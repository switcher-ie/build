#!/usr/bin/env bash

set -eo pipefail

################################################################################
# Constants
################################################################################

DIR="$(dirname "${BASH_SOURCE[0]}")"
ROOT="$(readlink -f ${DIR}/../../)"

################################################################################
# App Specific Constants
# Required:
#   ENDPOINT: Image hosting endpoint (eg. X4sh7.dkr.ecr.eu-west-1.amazonaws.com)
################################################################################

ENDPOINT="285532152610.dkr.ecr.eu-west-1.amazonaws.com"

################################################################################
# Environment Constants
################################################################################

APP="$(basename $ROOT)"
CLUSTER="switcher"

################################################################################
# Setup dry run
################################################################################

if [ -z "${DRY_RUN}" ]; then
  debug=
else
  debug=echo
fi
